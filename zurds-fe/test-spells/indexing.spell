if @targets.len() != 1:
    err('you can only target one player')

if @board.players.keys().contains(@targets.[0]).not():
    err('you must target a player')

if @board.players.[@self.owner].mana < 3:
    err('not enough mana')

@board.players.[@targets[0]].health -= 3
@board.players.[@self.owner].mana -= 3